<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_layout0"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="#1E4F5D"
    android:orientation="vertical"
    tools:context="com.example.siddhiparekh11.androidservices.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/large_sjsu_tile"
            />
        <TextView
            android:id="@+id/activity_a_txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical"
            android:textColor="#AECFD4"
            android:textSize="25sp"
            android:text="Services App"/>

    </LinearLayout>




    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="The purpose of this app is to study Android System in creating and managing the lifecycle of Bound and Local services."
        android:textColor="#AECFD4"
        android:textSize="15sp"/>



    <Button
        android:id="@+id/download_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PDFs Download Activity"
        android:textSize="15sp"

        android:layout_marginTop="25dp"
        android:layout_gravity="center_horizontal"
        android:padding="10dp"
        android:background="#FFFEC6"
        android:onClick="onDownload"/>
    <Button
        android:id="@+id/close_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Close"
        android:textSize="15sp"

        android:layout_marginTop="170dp"
        android:layout_gravity="center_horizontal"
        android:padding="10dp"
        android:background="#FFFEC6"
        android:onClick="onClose"/>

</LinearLayout>
